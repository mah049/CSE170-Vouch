    <div class="container-fluid">
    	<div class="row" id="buffer"></div>
		<div class="row"> 
		  	<div class="col-md-4"> 
		  		<p>You are in San Diego</p>
		  	</div>
		  	<div class="col-sm-6 col-sm-offset-3">
            <div id="imaginary_container"> 
                <div class="input-group stylish-input-group">
                    <input type="text" class="form-control"  placeholder="Search" >
                    <span class="input-group-addon">
                        <button type="submit">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>  
                    </span>
                </div>
            </div>
        </div>
	  	</div>
	  	<div class="row" id="small-buffer"></div>
	  	<div class="row">
		  	<div class="col-md-2"> 
		  		<p>Filter</p>
				<form>
					<div class="radio">
				      <label><input type="radio" name="optradio" checked id="mostPopular">Most Popular</label>
				    </div>
				    <div class="radio">
				      <label><input type="radio" name="optradio" id="mostRecent" disabled>Most Recent</label>
				    </div>
				    <div class="radio">

				      <label><input type="radio" name="optradio" disabled>Least Distance</label>
				    </div>
				</form>
				<p>Categories</p>
				<div class="checkbox">
  					<label><input type="checkbox" class="check" id="checkAll" disabled>All</label>
				</div>
				<div class="checkbox">
  					<label><input type="checkbox" class="check" disabled>Restaurants</label>
				</div>
				<div class="checkbox">
  					<label><input type="checkbox" class="check" disabled>Events</label>
				</div>
				<div class="checkbox">
  					<label><input type="checkbox" class="check" disabled>Groceries</label>
				</div>
				<div class="row" id="help-buttons">
					<a href="support.html"><button type="button" class="btn btn-default btn-success inline">Support</button></a>
		  		</div>
		  		<div class="row" id="help-buttons">
		  			<a href="faq.html"><button type="button" class="btn btn-default btn-success">FAQ</button></a>
		  		</div>
		  		<div class="row" id="help-buttons">
		  			<a href="contact.html"><button type="button" class="btn btn-default btn-success">Contact Us</button></a>
		  		</div>
	  		</div>
		  	<div class="col-sm-8" align = "middle"> 
		      	<!-- This is where the image used to be  
				<a href="dealView.html">
		      		<img src="images/exampleDeal.png" alt="HTML5 icon" class="img-responsive">
		      	</a>
				-->
	  		{{#each deal}}
				<a href = "dealView.html" >
				<p id="newDeals">{{Place}} is the place <br> {{Deal}} is the deal <br> {{Upvote}} is the upvote </p>
				</a>
		    {{/each}}
		    </div>
		    <div class="col-sm-2" align="right" id="margin-right-align"> 
		    	<!-- <p>720 vouches {{test}} </p> -->
		    </div>
	  	</div>
    </div>
